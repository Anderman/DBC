@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Change password";
}

<div class="modal-dialog">
    <div class="modal-content">
        <form asp-controller="Manage" asp-action="ChangePassword" method="post" class="form-horizontal" role="form">
            <div class="modal-header">
                <button type="button" class="close modal-close" aria-label="Close"><span aria-hidden="true">×</span></button>
                <h4 class="modal-title" id="myModalLabel">@ViewBag.Title</h4>

            </div>
            <div class="modal-body">
                <div asp-validation-summary="ValidationSummary.All" class="text-danger"></div>
                <input asp-for="OldPassword" class="form-control" asp-material-design="true" />
                <input asp-for="NewPassword" class="form-control" asp-material-design="true" />
                <input asp-for="ConfirmPassword" class="form-control" asp-material-design="true" />
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary waves-effect waves-light">Change password</button>
            </div>
        </form>
    </div>
</div>